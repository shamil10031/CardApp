<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="@dimen/news_item_height"
	app:cardCornerRadius="@dimen/news_item_padding">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:padding="@dimen/news_item_padding">

		<ImageView
			android:id="@+id/news_item_photo"
			android:layout_width="118dp"
			android:layout_height="match_parent"
			android:layout_marginEnd="@dimen/news_item_padding"
			tools:src="@drawable/news_photo_placeholder" />

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical">

			<TextView
				android:id="@+id/news_item_title"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:maxLines="1"
				android:textColor="@color/primary_dark_text_color"
				android:textSize="16sp"
				android:textStyle="bold"
				tools:text="@tools:sample/full_names" />

			<TextView
				android:id="@+id/news_item_content"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:maxLines="4"
				android:textColor="@color/primary_light_text_color"
				android:textSize="15sp"
				tools:text="FLJndskfsjnsdkj n f kdsjfkndsjsdfkjnsdfnsdkjfnkdsjfnsdkjnfksdjnnsdkfjnsdfs
				lkmrlknmflksnkljnjd" />

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent">

				<TextView
					android:id="@+id/news_item_date"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:layout_marginEnd="6dp"
					android:gravity="bottom"
					android:textColor="@color/secondary_text_color"
					android:textSize="14sp"
					tools:text="@tools:sample/date/mmddyy" />

				<TextView
					android:id="@+id/news_item_category"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:gravity="end|bottom"
					android:maxLines="1"
					android:textColor="@color/secondary_text_color"
					android:textStyle="bold|italic"
					tools:text="@tools:sample/full_names" />

			</LinearLayout>

		</LinearLayout>

	</LinearLayout>

</androidx.cardview.widget.CardView>